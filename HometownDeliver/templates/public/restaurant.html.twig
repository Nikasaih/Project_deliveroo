{% extends "base.html.twig" %}
{% block body %}
	<section>
		<h2>{{resto.NomRestaurant}}</h2>
		<p>Est basé a :
			{{resto.Localisation}}</p>
		<p>Horraire d'ouverture :
			{{resto.HoraireOuverture}}</p>
		<p>{{resto.InfosComplementaire}}</p>
		<img src="/uploads/{{resto.photo}}" alt="ma phto">
		<img src="/uploads/{{resto.ListAllergene}}" alt="ma phto">
	</section>
	{% for plat in resto.plats %}
		<h2>{{plat.NomPlat}}</h2>
		<p>{{plat.PrixUnit}}
			€</p>
		<p>{{plat.Note}}
			etoiles</p>
		<img src="/uploads/{{plat.photo}}" alt="ma phto">
	{% endfor %}

{% endblock %}
