{% extends 'base.html.twig' %}

{% block title %}Hello RestaurantController!
{% endblock %}

{% block body %}
	<h1>
		restaurant gestion</h1>

	<p>{{app.user.email}}</p>
	{% for resto in app.user.Restaurants %}
		<p>{{resto.NomRestaurant}}
		</p>
		<a href="{{path("restaurant", {'id': resto.id})}}">
			<button>
				vue public
			</button>
		</a>

		<a href="{{path("restaurant_gestion_edit", {'id': resto.id})}}">
			<button>
				modifier
			</button>
		</a>


		<a onclick="return confirm('Attention ceci va supprimé le restaurant définitivement')" href="{{path("restaurant_gestion_delete", {'id': resto.id})}}">
			<button>
				supprimer
			</button>
		</a>

		<a href="{{path("restaurant_gestion_plat", {'id': resto.id})}}">
			<button>
				les plats
			</button>
		</a>


	{% endfor %}
	<a href="{{path("restaurant_gestion_create")}}">
		<button>
			ajouter un restaurant
		</button>
	</a>
{% endblock %}
